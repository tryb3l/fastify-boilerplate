{
  "type": "object",
  "$id": "schema:dotenv",
  "required": ["MONGO_URL", "JWT_SECRET"],
  "properties": {
    "NODE_ENV": {
      "type": "string",
      "default": "development"
    },
    "MONGO_URL": {
      "type": "string"
    },
    "PORT": {
      "type": "integer",
      "default": 3000
    },
    "LOG_LEVEL": {
      "type": "string",
      "default": "warn"
    },
    "JWT_SECRET": {
      "type": "string"
    },
    "JWT_EXPIRE_IN": {
      "type": "string",
      "default": "1h"
    },
    "REFRESH_TOKEN_EXPIRE_IN": {
      "type": "string",
      "default": "30d"
    },
    "COOKIE_SECRET": {
      "type": "string"
    },
    "COOKIE_ACCESS_MAX_AGE": {
      "type": "integer",
      "default": "3600000"
    },
    "COOKIE_REFRESH_MAX_AGE": {
      "type": "integer",
      "default": "2592000000"
    }
  }
}
